<!DOCTYPE html>
<html>
    <head>
        <title>Login</title>
        <link href="{{ app.request.basepath }}/vendor/thomaspark/bootswatch/yeti/bootstrap.css" rel="stylesheet">

    </head>
    <body>

        <div class="container">
            <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">Login</div>
                    </div>

                    <div style="padding-top:30px" class="panel-body" >

                        <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                        <form id="loginform" class="form-horizontal" role="form"
                              method="post" action="{{ url('doLogin') }}" >

                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                <input id="login-username" type="text" class="form-control"
                                       name="login" value="{{ user }}" placeholder="usuario">
                            </div>

                            <div style="margin-bottom: 25px" class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                <input id="login-password" type="password" class="form-control"
                                       name="password" placeholder="contraseÃ±a">
                            </div>

                            <div style="margin-top:10px" class="form-group">

                                <div class="col-sm-12 controls">
                                    <button type="submit" id="btn-login" class="btn btn-success">
                                        Login
                                    </button>
                                </div>
                            </div>
                        </form>
                        <form method="get" action="{{ url('register') }}" >
                            <button type="submit" id="btn-registro" class="btn btn-success">
                                Registrarse
                            </button>
                        </form>
                    </div>
                </div>

                <script src="{{ app.request.basepath }}/vendor/components/jquery/jquery.js"></script>
                <script src="{{ app.request.basepath }}/vendor/twbs/bootstrap/dist/js/bootstrap.js"></script>

    </body>
</html>