{% extends 'layout.html.twig' %}

{% block title 'Apartamentos' %}

{% block body %}

<div class="container">
	<div class="row">

    <div class="col-md-12">
      <legend>LIsta de Usuarios</legend>

      <div class="table-responsive">

        <table id="mytable" class="table table-bordred table-striped">

          <thead>
            <th>Id</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th>Latitud</th>
            <th>Longitud</th>
            <th>Tipo</th>

            <th>Editar</th>
            <th>Borrar</th>
          </thead>

          <tbody>

            {% for a in aptos %}
            <tr>
              <td>{{ a.id }}</td>
              <td>{{ a.nombre }}</td>
              <td>{{ a.descripcion }}</td>
              <td>{{ a.precio }}</td>
              <td>{{ a.latitud }}</td>
              <td>{{ a.longitud }}</td>
              <td>{{ a.tipo }}</td>
              
              <td>
                <p data-placement="top" data-toggle="tooltip" title="Editar">
                  <a href="{{ url('aptos-edit', { a.id }) }}">
                    <button class="btn btn-primary btn-xs" data-title="Editar" >
                      <i class="glyphicon glyphicon-pencil"></i>
                    </button>
                  </a>
                </p>
              </td>
              <td>
                <p data-placement="top" data-toggle="tooltip" title="Borrar">
                  <a href="{{ url('aptos-delete', { a.id }) }}">
                    <button class="btn btn-danger btn-xs" data-title="Borrar">
                      <i class="glyphicon glyphicon-trash"></i>
                    </button>
                  </a>
                </p>
              </td>
            </tr>
            {% endfor %}

          </tbody>

        </table>

      </div>
    </div>
  </div>
</div>

{% endblock %}