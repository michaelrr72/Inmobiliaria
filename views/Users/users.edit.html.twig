{% extends 'layout.html.twig' %}

{% block title 'Editar Usuario' %}

{% block body %}

<form class="form-horizontal" method="post" action="{{ url('users-save') }}">

  <input type="hidden" name="index" value="{{ index }}">

  <fieldset>

    <!-- Titulo -->
    <legend>Crear o Editar Usuario</legend>

    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Nombre</label>
      <div class="col-md-4">
        <input type="text" class="form-control input-md"
            name="nombre" value="{{ user_to_edit.nombre }}"
            placeholder="nombre del usuario" required="">
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Apellido</label>
      <div class="col-md-4">
        <input type="text" class="form-control input-md"
            name="apellido" value="{{ user_to_edit.apellido }}"
            placeholder="apellido del usuario" required="">
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Dirección</label>
      <div class="col-md-4">
        <input type="text" class="form-control input-md"
            name="direccion" value="{{ user_to_edit.direccion }}"
            placeholder="dirección del usuario" required="">
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Email</label>
      <div class="col-md-4">
        <input type="text" class="form-control input-md"
            name="email" value="{{ user_to_edit.email }}"
            placeholder="correo electrónico" required="">
      </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label" for="textinput">Teléfono</label>
      <div class="col-md-4">
        <input type="text" class="form-control input-md"
            name="telefono" value="{{ user_to_edit.telefono}}"
            placeholder="teléfono del usuario" required="">
      </div>
    </div>

    <!-- Botones -->
    <div class="form-group">
      <div class="col-md-8">
        <div class="pull-right">
          <button class="btn btn-primary" type="submit">Guardar</button>
          <a href="{{ url('users-list') }}>" >
            <button class="btn btn-primary">Cancelar</button>
          </a>
        </div>
      </div>
    </div>

  </fieldset>
</form>


{% endblock %}